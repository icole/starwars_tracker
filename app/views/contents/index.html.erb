<!-- Hero Section -->
<div class="relative bg-gradient-to-r from-blue-900 to-indigo-900 text-white py-16 px-4 sm:px-6 lg:px-8 mb-12 rounded-2xl overflow-hidden">
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-[url('https://lumiere-a.akamaihd.net/v1/images/star-wars-backgrounds-14_856985d6.jpeg')] bg-cover bg-center"></div>
  </div>
  <div class="relative max-w-7xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-4">Star Wars Content Tracker</h1>
    <p class="text-xl text-blue-100 max-w-3xl mx-auto">Track your journey through the Star Wars universe. Mark your progress and never lose your place in the galaxy.</p>
  </div>
</div>

<!-- Content Grid -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-2xl font-bold text-gray-900">All Content</h2>
    <div class="flex space-x-2">
      <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Sort by: Newest
      </button>
      <button class="p-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z" />
        </svg>
      </button>
    </div>
  </div>

  <div class="content-grid">
    <% @contents.each do |content| %>
      <div class="content-card group transform hover:-translate-y-1 transition-all duration-300">
        <div class="relative">
          <!-- Content Type Icon -->
          <div class="absolute top-4 left-4 z-10">
            <% if content.content_type.name.downcase.include?('movie') %>
              <span class="content-badge movie" title="Movie">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm3 2h6v4H7V5zm8 8v2h1v-2h-1zm-2-8h1V5h-1v2zm-2 0V5H8v2h3zm-5 3v4h6v-4H6zm11 3h-1v-2h1v2z" clip-rule="evenodd" />
                </svg>
              </span>
            <% elsif content.content_type.name.downcase.include?('series') || content.content_type.name.downcase.include?('show') %>
              <span class="content-badge series" title="TV Show">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.217.768a1 1 0 11-1.94.486l-.225-.816-1.105.276a1 1 0 01-.488-1.94l1.11-.277L10 13.5l-.374.93a1 1 0 11-1.848-.774l.15-.436H5a2 2 0 01-2-2V5zm12 0H5v8h10V5z" clip-rule="evenodd" />
                </svg>
              </span>
            <% elsif content.content_type.name.downcase.include?('book') %>
              <span class="content-badge book" title="Book">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                </svg>
              </span>
            <% else %>
              <span class="content-badge other" title="<%= content.content_type.name %>">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
              </span>
            <% end %>
          </div>

          <!-- Content Image (Placeholder) -->
          <div class="h-48 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-t-xl overflow-hidden">
            <div class="w-full h-full bg-cover bg-center opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                 style="background-image: url('https://lumiere-a.akamaihd.net/v1/images/<%= content.title.parameterize %>_<%= content.id %>.jpeg?width=800');">
            </div>
          </div>
        </div>

        <div class="p-6">
          <div class="flex justify-between items-start mb-2">
            <h2 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
              <%= content.title %>
            </h2>
          </div>

          <div class="flex items-center text-sm text-gray-500 mb-4">
            <span class="text-yellow-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block -mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              4.8
            </span>
            <span class="mx-2 text-gray-300">â€¢</span>
            <span class="text-gray-600">
              <%= content.release_date.strftime('%b %d, %Y') %>
            </span>
          </div>

          <p class="text-gray-600 mb-6 line-clamp-3 text-sm leading-relaxed">
            <%= content.description %>
          </p>

          <div class="flex justify-between items-center pt-4 border-t border-gray-100">
            <%= link_to content_path(content),
                      class: "inline-flex items-center text-blue-500 hover:text-blue-700 font-medium transition-colors group-hover:translate-x-1 duration-300" do %>
              View Details
              <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>

            <div class="flex items-center text-xs text-gray-400 group-hover:text-blue-400 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= content.progresses.count %> updates
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
