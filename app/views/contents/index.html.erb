<div class="content-grid">
  <% @contents.each do |content| %>
    <div class="content-card">
      <div class="flex justify-between items-start mb-4">
        <h2 class="text-xl font-semibold"><%= content.title %></h2>
        <span class="text-sm text-gray-600">#<%= content.canonical_order %></span>
      </div>
      
      <p class="text-gray-600 mb-4"><%= content.description %></p>
      
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">
          <%= content.content_type.name %>
          <span class="mx-2">â€¢</span>
          <%= content.release_date.strftime('%B %d, %Y') %>
        </span>
        
        <%= link_to content_path(content), class: "text-blue-500 hover:text-blue-600" do %>
          <span class="font-medium">View Progress</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
